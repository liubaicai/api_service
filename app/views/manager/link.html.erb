
<div class="page-header">
  <h1>链接管理   <small><%= link_to '新建链接', new_link_path %></small></h1>
</div>

<div class="bc-body-content row">
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Url</th>
            <th colspan="2"></th>
        </tr>
        <% @links.each do |link| %>
        <tr>
            <td><%= link.sort %></td>
            <td><%= link.title %></td>
            <td><%= link.url %></td>
            <td><%= link_to 'Edit', edit_link_path(link) %></td>
            <td><%= link_to 'Delete', link, :method => :delete , data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </table>
</div>