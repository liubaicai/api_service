
<div class="page-header">
  <h1>编辑</h1>
</div>

<div class="bc-body-content row">
  <%= form_for :category, url: category_path(@category), method: :patch do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name,class: "form-control" %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>