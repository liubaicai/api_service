<div class="bc-body-content row">
    <% @articles.each do |article| %>
        <article>
            <header>
                <div>
                    <h2 class="bc-title"><%=link_to article.title, article %></h2>
                </div>
            </header>
            <div>
                <p><%= strip_tags(article.text)[0..120] %></p>
            </div>
            <footer>
                <div>
                    <span>发表于<%= article.created_at.localtime.to_s(:db) %></span>
                </div>
            </footer>
        </article>
    <% end %>
</div>

<div class="row digg_pagination">
    <%=will_paginate @articles %> 
</div>