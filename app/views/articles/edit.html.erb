
<div class="page-header">
  <h1>编辑</h1>
</div>

<div class="bc-body-content row">
  <%= form_for :article, url: article_path(@article), method: :patch  do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title,class: "form-control" %>
    </p>
    <p>
      <%= f.label :category %><br>
      <select class="form-control" name="article[category_id]" id="article_category_id">
        <% get_categories.each do |category| %>
          <option value="<%= category.id %>" <%= selectdefault(category.id,@article.category_id) %>><%= category.name %></option>
        <% end %>
      </select>
    </p>
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text,class: "form-control",id: "summernote" %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>