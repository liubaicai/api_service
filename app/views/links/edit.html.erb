
<div class="page-header">
  <h1 class="bc-title">编辑</h1>
</div>

<div class="bc-body-content row">
  <%= form_for :link, url: link_path(@link), method: :patch do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title,class: "form-control" %>
    </p>
    <p>
      <%= f.label :url %><br>
      <%= f.text_field :url,class: "form-control" %>
    </p>
    <p>
      <%= f.label :sort %><br>
      <%= f.text_field :sort,class: "form-control" %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>